<%- include('userHeader') %>

    <style>
        .product-name {
            font-weight: bold;
            color: #333;
            /* Darker color */
        }

        .product-quantity, .payment-method {
            font-weight: bold;
            color: #333;
            /* Darker color */
        }

        .order-details,
        .address,
        .total-amount {
            font-weight: bold;
            color: #333;
            /* Darker color */
        }
    </style>


    <div class="container">
        <h2>Checkout</h2>

        <div class="row py-3">

            <div class="row">
                <div class="col-xl-12 col-lg-12 mb-4">

                    <!-- Checkout -->
                    <div class="card shadow-0 border">
                        <div class="p-4">

                            <h5 class="order-details card-title mb-3 ">Order Details</h5>
                            <hr class="my-4" />

                            <div>
                             


                                <div class="container">
                                    <div class="row justify-content-center g-3">
                                       
                                        <div class="card mr-3 border-0" style="width: auto; margin-left: 45px;">
                                            <% userOrders.items.forEach(Product=>{%>
                                                <p>
                                                    <span class="product-name">
                                                        <%=Product.product.productName%>
                                                    </span>
                                                </p>
                                                <p>
                                                    <span class="product-quantity">Quantity: <%= Product.quantity %>
                                                    </span>
                                                </p>
                                                <%}) %>
                                        </div>
                                    </div>
                                </div>




                            </div>

                            <div class="container mt-5 mb-5">
                                
                            </div>

                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-6 mb-3">
                                        <!-- Delivery address -->
                                        <div class="row">
                                            <div class="form-check h-100 border rounded-3">
                                                <div class="p-3">
                                                    <div class="d-flex justify-content-center">
                                                        <h3>Delivery Address</h3>
                                                    </div>

                                                    <div class="address d-flex justify-content-between">
                                                        <p class="mb-2">Address: <%= deliveryAddress %>
                                                        </p>
                                                    </div>
                                                    <hr />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 mb-3">

                                        <div class="row">
                                            <div class="form-check h-100 border rounded-3">
                                                <div class="p-3">
                                                    <div class="d-flex justify-content-center">
                                                        <h3>Total Order Details</h3>
                                                    </div>
                                                    <div class="total-amount d-flex justify-content-between">
                                                        <% console.log("Total Amount:", totalAmount); %>
                                                            <p class="mb-2">Total: â‚¹<%= totalAmount %>

                                                            </p>
                                                    </div>
                                                    <div class="payment-method d-flex justify-content-between">
                                                        <p class="mb-2 bg-secondary text-white" style="width: 100%;">
                                                            Payment
                                                            Method: <%= paymentMethod %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>