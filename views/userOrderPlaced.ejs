<%- include('userHeader') %>

    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-12 mt-4">
                <div class="card QA_section border-0">
                    <div class="card-body QA_table">
                        <div class="table-responsive shopping-cart">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th class="border-top-0">Order ID</th>
                                        <th class="border-top-0">Action</th>
                                        <th class="border-top-0">Status</th>
                                        <th class="border-top-0">Date of Order</th>
                                        <th class="border-top-0">Order Details</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% userOrders.forEach((order)=> { %>
                                        <tr>
                                            <td>
                                                <img src="img/products/img-5.png" alt height="52">
                                                <p class="d-inline-block align-middle mb-0">
                                                    <a href="#"
                                                        class="d-inline-block align-middle mb-0 f_s_16 f_w_600 color_theme2">
                                                        <%= order.orderId %>
                                                    </a>
                                                </p>
                                            </td>

                                            <td>

                                                <form action="/cancelOrder" method="post" class="d-inline">

                                                    <input type="hidden" name="orderId" value="<%= order._id %>">

                                                    <!-- Button to submit the form and cancel the order -->
                                                    <%if(order.OrderStatus==="Order Placed"){%>
                                                        <button type="submit" class="btn btn-danger">Cancel
                                                            Order</button>
                                                        <%}else{%>
                                                            <p class="text-danger">Order Cancelled</p>
                                                            <%}%>
                                                </form>
                                            </td>
                                            <td>
                                                <a href="#" class="badge_btn_2">
                                                    <%= order.OrderStatus %>
                                                </a>
                                            </td>


                                            <td>
                                                <%= order.orderDate.toDateString() %>

                                            </td>

                                            <td>
                                                <a href="/userOrderDetails" type="submit" class="btn btn-primary">View
                                                    more</a>
                                            </td>
                                        </tr>
                                        <tr class="order-details" id="order-details-<%= order.orderId %>"
                                            style="display: none;">
                                            <td colspan="4">

                                                <% order.items.forEach((items)=> { %>
                                                    <img width="50px" height="50px"
                                                        src="<%=items.product?items.product.image[0]:" no img"%>"
                                                    alt="">
                                                    <p>Quantity: <%= items.quantity %>
                                                    </p>
                                                    <p>Shipping Address: <%= order.address.mobile %>,<%=
                                                                order.address.houseName %>,<%= order.address.street %>,
                                                                    <%= order.address.city %>,<%= order.address.pincode
                                                                            %>,<%= order.address.state %>
                                                    </p>
                                                    <p>Payment Method: <%= order.paymentMethod %>
                                                    </p>
                                                    <%})%>

                                                        <button class="hide-btn"
                                                            data-order-id="<%= order.orderId %>">Hide</button>
                                            </td>
                                        </tr>
                                        </tr>
                                        <% }); %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="footer">
        <div class="container">
            <div class="row">
