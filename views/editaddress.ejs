      <div class="row">
        <div class="col-lg-12">
          <div class="section-title mb-5">
            <h2>My Profile</h2>
          </div>
          <form method="post" action="/editaddress" onsubmit="return validation()">
            <div class="row">

              <div class="row">
                <input type="hidden" value="<%=addressIndex%>" name="addressIndex">
                <div class="col-md-6 form-group">
                  <label for="mobile">Tel. Number</label>
                  <input type="text" value="<%= address.mobile %>" id="mobile" class="form-control form-control-lg"
                    name="mobile">
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <label for="houseName">House Name</label>
                  <input type="text" value="<%= address.houseName %>" id="houseName"
                    class="form-control form-control-lg" name="houseName">
                </div>
                <div class="col-md-6 form-group">
                  <label for="street">Street</label>
                  <input type="text" value="<%= address.street %>" id="street" class="form-control form-control-lg"
                    name="street">
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <label for="city">City</label>
                  <input type="text" value="<%= address.city %>" id="city" class="form-control form-control-lg"
                    name="city">
                </div>
                <div class="col-md-6 form-group">
                  <label for="pinCode">Pincode</label>
                  <input type="text" value="<%= address.pincode %>" id="pinCode" class="form-control form-control-lg"
                    name="pinCode">
                </div>
              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <label for="state">State</label>
                  <input type="text" value="<%= address.state %>" id="state" class="form-control form-control-lg"
                    name="state">
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <button type="submit" class="btn btn-primary py-3 px-5">Update</button>
                </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
