    <script>
        function deleteImage(index) {


            // Assuming you have a hidden input field with the name "deletedImages"
            const deletedImagesInput = document.getElementById('deletedImages');
            const currentValue = deletedImagesInput.value;

            // Add the index to the list of deleted images
            deletedImagesInput.value = currentValue ? currentValue + ',' + index : index.toString();

            // Optionally, you can also hide or remove the image from the UI
            // (This won't actually delete the image until the form is submitted and processed on the server)
            const imageItem = document.querySelector(`.image-item:nth-child(${index + 1})`);
            imageItem.style.display = 'none';
        }
    </script>
    <script>
        document.getElementById("productForm").addEventListener("submit", function (event) {
            const stock = document.getElementsByName("stock")[0].value;
            const price = document.getElementsByName("price")[0].value;
            if (stock < 0 || price < 0) {
                alert("Stock and price cannot be negative.");
