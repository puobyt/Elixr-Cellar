<%- include('userHeader') %>

  <div class="hero-2" style="background-image: url('images/hero_2.jpg');">
    <div class="container">
      <div class="row justify-content-center text-center align-items-center">
        <div class="col-md-8">
          <span class="sub-title">Welcome to</span>
          <h2>Elixr Cellar</h2>
        </div>
      </div>
    </div>
  </div>
  <div class="site-section mt-5">
    <div class="container">
      <div class="row mb-5">
        <div class="col-12 section-title text-center mb-5">
          <h2 class="d-block">Our Products</h2>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Commodi, perspiciatis!</p>
          <p><a href="/userShop">View All Products <span class="icon-long-arrow-right"></span></a></p>
        </div>
      </div>



      <div class="row">
        <% randomProducts.forEach(product=> { %>
          <div class="col-lg-3 mb-5 col-md-6">
            <div class="wine_v_1 text-center pb-4">
              <a href="/userProductDetails/<%= product._id %>" class="thumbnail d-block mb-4">
                <img src="/public/<%= product.image[0] %>" alt="Image" class="img-fluid">
              </a>
              <div>
                <h3 class="heading mb-1"><a href="#">
                    <%= product.productName %>
                  </a></h3>
                <span class="price">
                  <%= product.price %>
                </span>
              </div>
              <div class="wine-actions">
                <h3 class="heading-2"><a href="#">
                    <%= product.productName %>
                  </a></h3>
                <span class="price d-block">
                  <%= product.price %>
                </span>
                <div class="rating">
                  <span class="icon-star"></span>
                  <span class="icon-star"></span>
                  <span class="icon-star"></span>
                  <span class="icon-star"></span>
                  <span class="icon-star-o"></span>
                </div>
                <form action="/addToCart/<%= product._id %>" method="post" class="btn add icon-shopping-bag mr-3">
                  <button class="icon-shopping-bag mr-3 add-to-cart-btn" type="submit" <% if (product.totalQuantity===0)
                    { %> disabled <% } %>>
                      <span>Add to Cart</span>
                  </button>

                </form>
              </div>
            </div>
          </div>
          <% }) %>
      </div>


      <div class="hero-2" style="background-image: url('images/hero_2.jpg');">
        <div class="container">
          <div class="row justify-content-center text-center align-items-center">
            <div class="col-md-8">
              <h2>Wines For Everyone</h2>
            </div>
          </div>
        </div>
      </div>


      <div class="footer">
        <div class="container">
          <div class="row">
            <div class="col-12 text-center">
              <div class="social-icons">
                <a href="#"><span class="icon-facebook"></span></a>
                <a href="#"><span class="icon-twitter"></span></a>
                <a href="#"><span class="icon-youtube"></span></a>
                <a href="#"><span class="icon-instagram"></span></a>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="copyright">
                <p>

                  Copyright 2024 &copy;
                  <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is
                  Designed
                  <i class="icon-heart text-danger" aria-hidden="true"></i> by <a href="https://colorlib.com"
                    target="_blank">by Paul Boby T</a>

                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px">
        <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
        <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
          stroke="#ff5e15" />
      </svg></div>

    <style>
      .add-to-cart-btn {
        background-color: #34db98;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
      }

      .add-to-cart-btn:disabled {
        background-color: #95a5a6;
        cursor: not-allowed;
      }

      /* Hover effect */
      .add-to-cart-btn:hover {
        background-color: #ed8984;
      }
    </style>
