<%- include('userHeader') %>
<style>
 .add-to-cart-btn {
  background-color: #ed8984; /
  color: #fff; 
  border: none; /* Remove button border */
  padding: 10px 20px; /* Add padding */
  border-radius: 5px; /* Add border radius */
  cursor: pointer; /* Change cursor to pointer */
}

.add-to-cart-btn:hover {
  background-color: #34db98; 
  
}

</style>
  <div class="main_content_iner overly_inner ">
    <div class="container-fluid p-0 mt-5">
      <div class="row mt-4">
        <div class="col-lg-6 align-self-center text-center">
          <img id="zoomImage" src="../<%=product.image[0]%>" alt class="mx-auto d-block sm_w_100" height="300" />
        </div>
        <div class="col-lg-6 align-self-center">
          <div class="white_card position-relative mb_20">
            <div class="card-body d-flex flex-column justify-content-between">
              <div class="single-pro-detail">
                <p class="mb-1">
                  <%=product.productCategory ? product.productCategory : "No Category" %>
                </p>
                <div class="custom-border mb-3"></div>
                <h3 class="pro-title">
                  <%= product.productName %>
                </h3>
                <p class="text-muted mb-3">
                  <%= product.description %>
                </p>
                <h2 class="pro-price">
                  <%= product.price %>
                </h2>
                <h6 class="text-muted font_s_13">Stock: <%= product.totalQuantity %>
                </h6>
                <form action="/addToCart/<%=product._id%>" method="post" class="icon-shopping-bag mr-3">
                  <button class="icon-shopping-bag mr-3 add-to-cart-btn" type="submit" <% if (product.totalQuantity === 0) { %> disabled <% } %>>
                    <span>Add to Cart</span>
                  </button>
                  
                </form>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="col-12 text-center">
          <div class="social-icons">
            <a href="#"><span class="icon-facebook"></span></a>
            <a href="#"><span class="icon-twitter"></span></a>
            <a href="#"><span class="icon-youtube"></span></a>
            <a href="#"><span class="icon-instagram"></span></a>
