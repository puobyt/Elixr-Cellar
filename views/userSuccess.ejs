<body>
    <!-- Include userHeader -->
    <%- include('userHeader') %>

        <div class="container">
            <div class="row mt-5">
                <div class="col-lg-12 mt-4">
                    <div class="card QA_section border-0">
                        <div class="card-body QA_table">
                            <h2 class="text-center mb-4">Order Placed Successfully</h2>
                            <p class="text-center">Thank you for your order! Your Order ID is: <strong>
                                    <%= latestOrder.orderId %>
                                </strong>.</p>
                            <p class="text-center">You will receive an email confirmation shortly.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add your footer -->
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <div class="social-icons">
